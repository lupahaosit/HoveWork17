<Window x:Class="HoveWork17.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HoveWork17"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>

        <DataGrid
            Grid.Row="0" Grid.Column="0"
            x:Name="GridView"
            IsSynchronizedWithCurrentItem="True"
            SelectionMode="Single"
            ItemsSource="{Binding}"
            IsReadOnly="False" 
            
            >
            <DataGrid.Columns >
                <DataGridTextColumn
                    x:Name="Id"
                    Binding="{Binding Id}"
                    Header="Id"
                    IsReadOnly="True"/>
                <DataGridTextColumn
                    x:Name="Surname"
                    Binding="{Binding Surname}"
                    Header="Surname"
                    />
                <DataGridTextColumn
                    x:Name="NAME"
                    Binding="{Binding NAME}"
                    Header="Name"
                    />
                <DataGridTextColumn
                    x:Name="LASTNAME"
                    Binding="{Binding LASTNAME}"
                    Header="Lastname"
                    />
                <DataGridTextColumn
                    x:Name="NUBMER"
                    Binding="{Binding NUMBER}"
                    Header="Number"
                    />
                <DataGridTextColumn
                    x:Name="EMAIL"
                    Binding="{Binding EMAIL}"
                    Header="Email"
                    />
            </DataGrid.Columns>

            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Add" Click="Data_Grid_Add"/>
                    <MenuItem Header="Remove" Click="Data_Grid_Remove"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
        <DataGrid
            Grid.Row="0" Grid.Column="1"
            x:Name="GV_Access"
            IsSynchronizedWithCurrentItem="True"
            SelectionMode="Single"
            ItemsSource="{Binding}"
            IsReadOnly="False" 
            
            >
            <DataGrid.Columns >
                <DataGridTextColumn
                    x:Name="AccessId"
                    Binding="{Binding Id}"
                    Header="Id"
                    IsReadOnly="True"/>
                <DataGridTextColumn
                    x:Name="AccessEmail"
                    Binding="{Binding Email}"
                    Header="Surname"
                    />
                <DataGridTextColumn
                    x:Name="AccessCod"
                    Binding="{Binding Cod}"
                    Header="Name"
                    />
                <DataGridTextColumn
                    x:Name="AccessObject"
                    Binding="{Binding objctNumber}"
                    Header="Lastname"
                    />
               
            </DataGrid.Columns>

            <DataGrid.ContextMenu>
                <ContextMenu>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>

    </Grid>
</Window>
